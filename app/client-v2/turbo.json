{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "pipeline": {
    "build": {
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["^lint", "^build"],
      "outputs": []
    },
    "generate": {
      "dependsOn": ["^generate"]
    },
    "lint": {
      "outputs": []
    },
    "clean": {
      "outputs": []
    }
  },
  "globalEnv": [
    "NEXT_PUBLIC_APP_URL",
    "KEYCLOAK_ID",
    "KEYCLOAK_SECRET",
    "KEYCLOAK_ISSUER"
  ]
}
