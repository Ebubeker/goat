{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "pipeline": {
    "build": {
      "outputs": ["dist/**", ".next/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["^lint", "^build"],
      "outputs": []
    },
    "generate": {
      "dependsOn": ["^generate"]
    },
    "lint": {
      "cache": false
    },
    "clean": {},
    "typecheck": {
      "cache": false
    }
  },
  "globalEnv": [
    "NEXT_PUBLIC_APP_URL",
    "NEXT_PUBLIC_API_URL",
    "NEXT_PUBLIC_MAP_TOKEN",
    "NEXTAUTH_URL",
    "NEXTAUTH_SECRET",
    "KEYCLOAK_CLIENT_SECRET",
    "KEYCLOAK_CLIENT_ID",
    "KEYCLOAK_ISSUER",
    "API_URL"
  ]
}
